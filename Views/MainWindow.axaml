<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Arunka.MainWindow"
        Width="400" Height="300"
        Title="Centered Button">
    <Grid>
            <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="Enter Image Name:"/>
                <ComboBox x:Name="ImageNameDropdown" Width="200"/>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="Update Position" Click="OnUpdateClick"/>
                    <Button Content="Load JSON" Click="OnLoadClick"/>
                    <Button Content="Save JSON" Click="OnSaveClick"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="ScreenShot"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="OnScreenshotClick"/>
                        
                        <Button Content="WaitAndTap"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="WaitAndTap"/>
                </StackPanel>
                        
                <Button Content="Repeat Battle"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="RepeatButtonOnClick"/>
            </StackPanel>
    </Grid>
</Window>